{{ role }}

{% if role == "timeline" %}

<div class="photos-timeline" 
  data-controller="timeline" 
  data-timeline-target="timeline"
  data-action="timeline:disable@document->timeline#disable
               timeline:reset@document->timeline#resetSlider"
>
    <h3 class="photos-timeline__title" data-timeline-target="title">{{ lang[locale].timeline }}</h3>
    <div class="photos-timeline__range caption" data-timeline-target="range">1900</div>
    <div class="photos-timeline__slider__container" data-timeline-target="slider">
        <div class="photos-timeline__slider" 
          data-timeline-target="sliderKnob sliderYear"
          data-action="touchstart->timeline#sliderStartDrag
                       mousedown->timeline#sliderStartDrag
                       touchmove@document->timeline#sliderYearMoved
                       mousemove@document->timeline#sliderYearMoved
                       touchend@document->timeline#sliderStopDrag
                       mouseup@document->timeline#sliderStopDrag"
        >1900</div>
        <div class="photos-timeline__slider-selected-range" data-timeline-target="selectedRange">
        </div>
    </div>
</div>

{% else %}

<div class="photos-timeline" 
  data-controller="timeline--filter" 
  data-timeline--filter-target="timeline"
  data-action="timeline:disable@document->timeline--filter#disable
               timeline:reset@document->timeline--filter#resetSlider"
>
    <h3 class="photos-timeline__title" data-timeline--filter-target="title">{{ lang[locale].timeline }}</h3>
    <div class="photos-timeline__range caption" data-timeline--filter-target="range">1900 - 1990</div>
    <div class="photos-timeline__slider__container" data-timeline--filter-target="slider">
        <div class="photos-timeline__slider" 
          data-timeline--filter-target="sliderKnob sliderLeft"
          data-action="touchstart->timeline--filter#sliderStartDrag
                       mousedown->timeline--filter#sliderStartDrag
                       touchmove@document->timeline--filter#sliderLeftMoved
                       mousemove@document->timeline--filter#sliderLeftMoved
                       touchend@document->timeline--filter#sliderStopDrag
                       mouseup@document->timeline--filter#sliderStopDrag"
        >1900</div>
        <div class="photos-timeline__slider-selected-range" data-timeline--filter-target="selectedRange">
        </div>
        <div class="photos-timeline__slider" 
        data-timeline--filter-target="sliderKnob sliderRight"
        data-action="touchstart->timeline--filter#sliderStartDrag
                       mousedown->timeline--filter#sliderStartDrag
                       touchmove@document->timeline--filter#sliderRightMoved
                       mousemove@document->timeline--filter#sliderRightMoved
                       touchend@document->timeline--filter#sliderStopDrag
                       mouseup@document->timeline--filter#sliderStopDrag"
        >1944</div>
    </div>
</div>

{% endif %}