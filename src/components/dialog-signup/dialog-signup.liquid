<dialog-signup class="dialog dialog-signup">
  {% include button-circular/button-circular.liquid icon:"close" id:"DialogSignupClose" trigger:"dialogSignup:hide" label:lang[locale].close class:"dialog__close" %}

  <div class="dialog__wrapper">
      <h3 class="dialog__title">{{ lang[locale].signup }}</h3>
      <div class="dialog__form">
        <label for="name">{{ lang[locale].full_name }}</label>
        <input class="input" name="name" type="text" placeholder="{{ lang[locale].full_name }}"/>
        <label for="email">{{ lang[locale].email }}</label>
        <input class="input" name="email" type="email" placeholder="{{ lang[locale].email }}"/>
        <label for="password">{{ lang[locale].password }}</label>
        <input class="input" name="password" type="password" placeholder="{{ lang[locale].password }}" />
        <button class="button dialog__button">{{ lang[locale].signup }}</button>
      </div>
  </div>
</dialog-signup>
