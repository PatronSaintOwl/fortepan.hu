<dialog-signin class="dialog dialog-signin">
  {% include button-circular/button-circular.liquid icon:"close" id:"DialogSigninClose" trigger:"dialogSignin:hide" label:lang[locale].close class:"dialog__close" %}

  <div class="dialog__wrapper">
      <h3 class="dialog__title">{{ lang[locale].login }}</h3>
      <div class="dialog__form">
        <label for="email">{{ lang[locale].username }}</label>
        <input class="input" name="email" type="text" placeholder="{{ lang[locale].username }}"/>
        <label for="password">{{ lang[locale].password }}</label>
        <input class="input" name="password" type="password" placeholder="{{ lang[locale].password }}" />
        <button class="button dialog__button">{{ lang[locale].signin }}</button>
      </div>
  </div>
</dialog-signin>
