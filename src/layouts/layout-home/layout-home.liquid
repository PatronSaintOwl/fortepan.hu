---
layout: layout-base/layout-base.liquid
---

{% include header-nav/header-nav.liquid hide_search:true header_class:"header-nav--transparent" %}

<layout-home class="layout-home scrollview js-header-watchscroll">
  <section class="layout-home__hero">
    <div class="layout-home__hero__background"></div>
    <div class="layout-home__hero__search-wrapper">
      {% include input-search/input-search.liquid class:"layout-home__search__input" type:"large" %}
      {% if locale == "hu" %}
      <div class="layout-home__hero__total h3">Összesen <a href="/{{ locale }}/photos/"><span></span> fénykép</a></div>
      {% else %}
      <div class="layout-home__hero__total h3"><a href="/{{ locale }}/photos/"><span></span> photos</a> in total</div>
      {% endif %}
    </div>
    <div class="layout-home__hero__content">
      <h3 class="layout-home__hero__headline">{{ description }}</h3>
      <div class="layout-home__hero__text">{{ content }}</div>
    </div>
  </section>
  {% include footer/footer.liquid %}
</layout-home>
